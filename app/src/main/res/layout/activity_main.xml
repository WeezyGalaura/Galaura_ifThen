<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtDecision"
        android:layout_width="305dp"
        android:layout_height="204dp"
        android:layout_marginBottom="80dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtLore"
        android:layout_width="305dp"
        android:layout_height="204dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/txtDecision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.239" />

    <Button
        android:id="@+id/btnDecision1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:text="Decision 1"
        app:layout_constraintBottom_toTopOf="@+id/txtDecision"
        app:layout_constraintEnd_toStartOf="@+id/btnDecision2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtDecision"
        app:layout_constraintTop_toBottomOf="@+id/txtLore"
        app:layout_constraintVertical_bias="0.371" />

    <Button
        android:id="@+id/btnDecision2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Decision 2"
        app:layout_constraintBottom_toTopOf="@+id/txtDecision"
        app:layout_constraintEnd_toEndOf="@+id/txtDecision"
        app:layout_constraintTop_toBottomOf="@+id/txtLore"
        app:layout_constraintVertical_bias="0.371" />

</androidx.constraintlayout.widget.ConstraintLayout>